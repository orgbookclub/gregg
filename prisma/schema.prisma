generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

type SprintsParticipants {
  didFinish  Boolean
  endCount   Int
  startCount Int
  userId     String
}

model qotds {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  question    String
  serverId    String
  status      String
  suggestedOn DateTime @db.Date
  userId      String
}

model servers {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model sprints {
  id           String                @id @default(auto()) @map("_id") @db.ObjectId
  duration     Int
  participants SprintsParticipants[]
  startedBy    String
  threadId     String
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
